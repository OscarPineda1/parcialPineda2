@model IEnumerable<Proyecto_Parcial.Models.Remesa>

<a class="btn btn-success mb-3" asp-controller="Registro" asp-action="Index">REGISTRAR UNA NUEVA CUENTA</a>
<br>
<div class="row justify-content-center">
    <table class="table table-striped table-bordered table-haver">
        <thead>
            <td>Remitente</td>
            <td>Destinatario</td>
            <td>Pais de Origen</td>
            <td>Pais de Destino</td>
            <td>Monto Enviado</td>
            <td>Tipo de Moneda</td>
            <td>Tasa de Cambio</td>
            <td>Monto Final</td>
            <td>Estado</td>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Remitente)</td>
                    <td>@Html.DisplayFor(modelItem => item.Destinatario)</td>
                    <td>@Html.DisplayFor(modelItem => item.PaisOrigen)</td>
                    <td>@Html.DisplayFor(modelItem => item.PaisDestino)</td>
                    <td>@Html.DisplayFor(modelItem => item.MontoEnviado)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoMoneda)</td>
                    <td>@Html.DisplayFor(modelItem => item.TasaCambio)</td>
                    <td>@Html.DisplayFor(modelItem => item.MontoFinal)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                </tr>
            }
        </tbody>
    </table>
</div>